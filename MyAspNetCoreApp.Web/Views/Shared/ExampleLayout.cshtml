<html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - www.mysite.com</title>
</head>
<body>
    <header>
        <div>HEADER</div>
        @await RenderSectionAsync("header", required: false)
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            FOOTER
            @await RenderSectionAsync("footer", required: false)

        </div>
    </footer>

</body>
</html>

</html>