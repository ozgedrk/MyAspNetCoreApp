@{
    ViewData["Title"] = "GetById";
}

@model ProductViewModel
<a class="btn btn-primary mb-3" asp-controller="products" asp-action="index">Urunler sayfasina git</a>

<div class="card">
    <div class="card-header">
        Urun (@Model.Name)
    </div>
    <div class="card-body">

        <p class="card-text">
            <div>Id : @Model.Id</div>
            <div>Aciklama : @Model.Description</div>
            <div>Fiyat : @Model.Price</div>
            <div>Stok : @Model.Stock</div>
            <div>Renk : @Model.Color</div>
            <div>Sure :@Model.Expire</div>
        </p>
    </div>
</div>
