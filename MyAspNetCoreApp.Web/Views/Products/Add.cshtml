@{
    ViewData["Title"] = "Add";
}

<h1>Urun ekleme</h1>

@model ProductViewModel

<div asp-validation-summary="All">
</div>

<form asp-controller="products" asp-action="Add" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Prroduct Name :</label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Prroducts price :</label>
        <input class="form-control" asp-for="Price">
        <span class="text-danger" asp-validation-for="Price"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stock Amount :</label>
        <input type="number" class="form-control" asp-for="Stock">
        <span class="text-danger" asp-validation-for="Stock"></span>

    </div>
    <div class="mb-3">
        @*     <label asp-for="Color" class="form-label">Products Color :</label>
        <input class="form-control" asp-for="Color">
        *@
        <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect">
            <option value="">Choose a color</option>
        </select>
        <span class="text-danger" asp-validation-for="Color"></span>


    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" asp-for="IsPublish">
            Should it be published?
        </label>
    </div>

    <div class="mb-3 mt-3">
        <span>How many months that product will be published ?  </span>
        @foreach (var item in ViewBag.Expire as Dictionary<string, int>)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" id="@(item.Value)Expire" asp-for="Expire" value="@item.Value">
                <label class="form-check-label" asp-for="Expire" for="@(item.Value)Expire">
                    @item.Key
                </label>
            </div>
        }
        <span class="text-danger" asp-validation-for="Expire"></span>

    </div>

    <div class="form-floating mb-3">
        <textarea asp-for="Description" class="form-control" placeholder="Product Description" style="height: 100px"></textarea>
        <label asp-for="Description">Product Comments</label>
        <span class="text-danger" asp-validation-for="Description"></span>

    </div>

    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Prroduct Publish Date :</label>
        <input class="form-control" asp-for="PublishDate">
        <span class="text-danger" asp-validation-for="PublishDate"></span>

    </div>

    <button type="submit" class="btn btn-info">Urun Kaydet</button>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }